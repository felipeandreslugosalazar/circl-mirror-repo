<section class="banner-section bg-white">
  <div class="">

    <div class="d-flex flex-column align-items-center justify-content-center banner-homepage-left">
      <h2 class="mb-6 banner-header">New in town? Join or host activities to get to know new people. Match, meet & mingle!</h2>

      <div class="banner-search-bar">
        <div class="">
          <%= form_tag events_path, method: :get do %>
              <%= text_field_tag :query,
                  params[:query],
                  class: "form-control-search-index",
                  placeholder: "Type in a location (e.g. munich, berlin)"
              %>
              <%= submit_tag "Search", class: "btn-standard submit-btn-search" %>
          <% end %>
        </div>
      </div>
    </div>


  </div>
</section>

